{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all"
    },
    "globals": [
      "Logger",
      "SpreadsheetApp",
      "ContentService",
      "LockService",
      "CacheService",
      "Utilities",
      "PropertiesService"
    ]
  }
}
